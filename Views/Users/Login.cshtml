@model twitter_clone.Models.UsersLoginModel
@{
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Application.styles.css" asp-append-version="true" />
</head>

<body class="">
    <div class="flex min-h-screen">
        <div class="relative w-1/2 bg-twitter-primary flex items-center justify-center">
            <div class="flex items-center m-10">
                <p class="text-white text-5xl p-5">Welcome back! We're pleased to see you here</p>
                <div class="flex justify-end">
                    <img src="~/assets/logo.webp" alt="Logo" class="h-50">
                </div>
            </div>
        </div>
        <div class="w-1/2 flex items-center justify-center">
            <div class="max-w-md w-full p-8">
                <h2 class="text-2xl font-bold text-center text-gray-800">Login with your account</h2>
                <form asp-action="Login" method="post" class="mt-8">
                    <div asp-validation-summary="ModelOnly" class="text-red-500 mb-6"></div>
                    <div class="flex flex-col">
                        <div class="mb-2">
                            <label for="user_username" class="">Username or email</label>
                            <input asp-for="User_username_or_email" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"/>
                            <span asp-validation-for="User_username_or_email" class="text-red-500 text-sm"></span>
                        </div>
                        <div class="">
                            <label for="user_password_hash" class="">Password</label>
                            <input asp-for="User_password" type="password" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"/>
                            <span asp-validation-for="User_password" class="text-red-500 text-sm"></span>
                        </div>
                    </div>   
                    <div class="flex items-center justify-between my-4">
                    </div>
                    <div>
                        <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-full text-white bg-twitter-primary hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            Login
                        </button>
                    </div>
                    <div class='text-red-500'>
                        @ViewBag.Error
                    </div>
                </form>
                <p class="mt-2 text-center text-sm text-gray-600">
                    Don't have an account?
                    <a href="@Url.Action("Login", "Users")" class="font-medium text-twitter-primary hover:text-blue-500">
                        Sign in
                    </a>
                </p>
            </div>
        </div>
    </div>
</body>
