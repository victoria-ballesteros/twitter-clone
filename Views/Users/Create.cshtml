@model twitter_clone.Models.UsersCreateModel

@{
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create a new account</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Application.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="min-h-screen">
        <div class="w-full h-full flex">
            <div class="w-1/2 flex items-center justify-center bg-white">
                <div class="max-w-md w-full p-8">
                    <h2 class="text-2xl font-bold text-center text-gray-800">Create your account</h2>
                    <form asp-action="Create" method="post" class="mt-8">
                        <div class="flex flex-col">
                            <div class="mb-2">
                                <label for="User_first_name" class="">First Name</label>
                                <input asp-for="User_first_name" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"/>
                                <span asp-validation-for="User_first_name" class="text-red-500 text-sm"></span>
                            </div>
                            <div class="mb-2">
                                <label for="user_last_name" class="">Last Name</label>
                                <input asp-for="User_last_name" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"/>
                                <span asp-validation-for="User_last_name" class="text-red-500 text-sm"></span>
                            </div>
                            <div class="mb-2">
                                <label for="user_username" class="">Username</label>
                                <input asp-for="User_username" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"/>
                                <span asp-validation-for="User_username" class="text-red-500 text-sm"></span>
                            </div>
                            <div class="mb-2">
                                <label for="user_email" class="">Email</label>
                                <input asp-for="User_email" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"/>
                                <span asp-validation-for="User_email" class="text-red-500 text-sm"></span>
                            </div>
                            <div class="">
                                <label for="user_password_hash" class="">Password</label>
                                <input asp-for="User_password_hash" type="password" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"/>
                                <span asp-validation-for="User_password_hash" class="text-red-500 text-sm"></span>
                            </div>
                        </div>   
                        <div class="mt-4">
                            <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-full text-white bg-twitter-primary hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                Sign up
                            </button>
                        </div>
                    </form>

                    <p class="mt-2 text-center text-sm text-gray-600">
                        Already have an account?
                        <a href="@Url.Action("Login", "Users")" class="font-medium text-twitter-primary hover:text-blue-500">
                            Login
                        </a>
                    </p>
                </div>
            </div>
            <div class="w-1/2 flex items-center justify-center bg-twitter-primary">
                <div class="flex items-center m-10">
                    <p class="text-white text-6xl p-5">Twitter it's what's happening</p>
                    <div class="flex justify-end">
                        <img src="~/assets/logo.webp" alt="Logo" class="h-50">
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
